{
  "name": "@map-colonies/error-express-handler",
  "version": "2.1.0",
  "description": "Express error handler for the MapColonies project",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "prelint:fix": "npm run format:fix",
    "prelint": "npm run format",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "tsc --noEmit -p tsconfig.json && jest --config=./tests/configurations/jest.config.js",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json",
    "start": "npm run build && cd dist && node ./index.js",
    "clean": "rimraf dist",
    "prepublish": "npm run build",
    "prepare": "husky",
    "docs": "typedoc src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MapColonies/error-express-handler.git"
  },
  "author": "MapColonies",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MapColonies/error-express-handler/issues"
  },
  "files": [
    "dist/**/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20"
  },
  "homepage": "https://github.com/MapColonies/error-express-handler#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@map-colonies/eslint-config": "^4.0.0",
    "@map-colonies/prettier-config": "^0.0.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "commitlint": "^19.6.1",
    "eslint": "^8.16.0",
    "express": "^4.21.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.7",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "supertest": "^7.0.0",
    "typescript": "^5.7.3",
    "@map-colonies/tsconfig": "^1.0.0",
    "typedoc": "0.27.6",
    "@swc/core": "^1.10.8",
    "@swc/jest": "^0.2.36",
    "@map-colonies/infra-copilot-instructions": "^1.0.0",
    "@map-colonies/commitlint-config": "^1.0.0"
  },
  "dependencies": {
    "http-status-codes": "^2.3.0"
  }
}
